<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.hide.videophoto.widget.PercentageView
        android:id="@+id/pb_percentage"
        android:layout_width="@dimen/dimen_80"
        android:layout_height="@dimen/dimen_80"
        android:fontFamily="@font/orbitron_bold"
        app:centerColor="@color/black60"
        app:percentage="100"
        app:percentageWidth="25"
        app:progressBackgroundColor="@color/colorPrimaryLight"
        app:progressColor="@color/colorPrimaryDark"
        app:softness="true"
        app:textColor="@color/textColorPrimary" />
</LinearLayout>

